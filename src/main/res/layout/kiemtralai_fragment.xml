<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.notifications.KiemtralaiFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lay_1"
        android:gravity="center"
        >
        <TextView

            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_vn"
            android:textSize="30dp"
            android:textFontWeight="@android:integer/config_longAnimTime"
            ></TextView>
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/txt_vn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_like"
            app:srcCompat="@drawable/ic_star_border_black_24dp"
            ></ImageView>

    </RelativeLayout>
    <TextView
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:gravity="center"
        android:layout_below="@+id/lay_1"
        ></TextView>
    <RelativeLayout
        android:id="@+id/layout_img"
        android:layout_below="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img"
            ></ImageView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_img"
        android:gravity="center"
        android:id="@+id/lay_txt"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_word"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="40dp"
            ></TextView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay_txt"
        android:gravity="center"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_media"
            android:text="Loa"
            android:layout_marginLeft="20dp"

            ></Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_timeup"
            android:text="timeup"
            android:layout_toRightOf="@+id/btn_media"
            android:layout_marginLeft="20dp"

            ></Button>
    </RelativeLayout>

</RelativeLayout>